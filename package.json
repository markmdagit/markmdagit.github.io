{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Marcos Alvarez's personal portfolio",
  "main": "index.html",
  "scripts": {
    "test": "jest --config jest.config.cjs --runInBand",
    "build": "tsc",
    "bundle": "esbuild ts/script.ts --bundle --platform=browser --target=es2017 --outfile=dist/script.bundle.js --sourcemap",
    "validate:html": "html-validate --config .htmlvalidate.json \"./**/*.html\"",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -w",
    "clean": "rimraf dist",
  "lint": "node ./node_modules/eslint/bin/eslint.js \"{ts,test}/**/*.{ts,js}\"",
    "start": "npx http-server -c-1 -p 8080",
    "preview": "npx http-server -c-1 -p 8080",
    "convert-images": "node scripts/images.js convert",
    "generate-thumbs": "node scripts/images.js thumbs",
    "images:all": "node scripts/images.js all"
  },
  "lhci": {
    "collect": {
      "numberOfRuns": 1
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.4",
    "@lhci/cli": "^0.8.0",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "esbuild": "^0.18.16",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "html-validate": "^7.13.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.0",
    "jsdom": "^22.1.0",
    "sharp": "^0.32.4",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.2"
  }
}
